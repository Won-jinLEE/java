
public class MainClass {
	public static void main(String[] args) {
		int sumNumber1 = 0;
		for (int i = 0; i < 1000; i++) {
			sumNumber1 = sumNumber1 + (i + 1);
		}
		System.out.println("합계 : " + sumNumber1);

		int sumNumber2 = 0;
		for (int i = 0; i < 100; i++) {
			int num1 = i + 1;
			if (num1 % 2 == 0) {
				sumNumber2 = sumNumber2 + (num1);
			}
		}
		System.out.println("짝수의 합 : " + sumNumber2);
	}
}
